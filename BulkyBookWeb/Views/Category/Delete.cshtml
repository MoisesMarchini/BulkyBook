@model Category
@{
    ViewData["Title"] = "Delete";
}

<form method="post" asp-action="Delete">
    <input asp-for="Id" hidden />
    <div class="border rounded p-3 mx-auto mt-4">
        <div class="pb-2">
            <h2 class="text-danger">Deletar Categoria</h2>
            <hr>
        </div>
        @* <div asp-validation-summary="All" class="text-danger"></div> *@
        <div class="mb-3">
            <label asp-for="Name" class="ms-4"></label>
            <input asp-for="Name" class="form-control rounded-pill" disabled />
        </div>
        <div class="mb-3">
            <label asp-for="DisplayOrder" class="ms-4"></label>
            <input asp-for="DisplayOrder" class="form-control rounded-pill" disabled />
        </div>

        <div class="form-btns row text-center w-100 m-auto mt-4 gap-3">
            <button type="submit" class="btn btn-danger col" style="max-width: 200px;">
                Excluir
            </button>
            <a asp-controller="Category" asp-action="Index" class="btn btn-secondary col" style="max-width: 200px;">
                Voltar para lista
            </a>
        </div>
    </div>
</form>

@section Scripts
{
@{
    <partial name="_ValidationScriptsPartial" />
}
}